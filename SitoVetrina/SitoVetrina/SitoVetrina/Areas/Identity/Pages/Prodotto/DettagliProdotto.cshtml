@page
@model SitoVetrina.Areas.Identity.Pages.Prodotto.DettagliProdottoModel
@{
    ViewData["Title"] = @Model.prodotto.Nome;
}
<div class="container-fluid my-5">
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
    <partial name="_DettagliProdottoPartial.cshtml" />
    <h1>@Model.alert</h1>
</div>
@section cerca{
    <form class="col-12 col-lg-8 mb-3 mb-lg-0 me-auto" role="search" action="/">
        <input asp-page="index" asp-route-id=@Model.testoRicerca asp-for=@Model.testoRicerca id="searchBar" type="text" class="form-control" placeholder="Search..." aria-label="Search">
    </form>
}
